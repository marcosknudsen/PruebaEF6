@model PruebaEF6.Models.League
@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm("CreateLeague","League", FormMethod.Post))
{
    <div class="mb-3">
        @Html.LabelFor(model => model.Country, "Country", null)
        @Html.DropDownListFor(model => model.Country_Id, (List<SelectListItem>)ViewBag.Countries, new { @class = "form-select" })
    </div>
    <div class="mb-3">
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name, htmlAttributes: new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
}