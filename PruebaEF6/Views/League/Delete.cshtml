@model PruebaEF6.Models.League
@{
    ViewBag.Title = "Delete";
}

<h2>Do you want to delete this team?</h2>

@using (Html.BeginForm("DeleteLeague", "League", new { id = Model.Id }, FormMethod.Post, null))
{
    <div>
        <button class="btn btn-danger" type="submit">Delete</button>
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-primary" })
    </div>
}
