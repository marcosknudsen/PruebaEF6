@model PruebaEF6.Models.Team
@{
    ViewBag.Title = "Edit";
}

<h2>Edit: Team</h2>

@using (Html.BeginForm("EditTeam", "Team", new { id = Model.Id }, FormMethod.Post, null))
{
    <div>
        <div class="mb-3">
            @Html.LabelFor(model => model.Name)
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
        </div>
        <div class="mb-3">
            @Html.LabelFor(model => model.League.Id, new { @class = "form-label" })
            @Html.DropDownListFor(model => model.League.Id, (List<SelectListItem>)ViewBag.Leagues, new { @class = "form-select" })
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
    </div>
}
